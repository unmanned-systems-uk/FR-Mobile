{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ESP-IDF: Build",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/build"
                ]
            }
        },
        {
            "label": "ESP-IDF: Clean",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "fullclean"
            ]
        },
        {
            "label": "ESP-IDF: Flash",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "-p",
                "COM3",
                "flash"
            ],
            "dependsOn": "ESP-IDF: Build"
        },
        {
            "label": "ESP-IDF: Monitor",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "-p",
                "COM3",
                "monitor"
            ]
        },
        {
            "label": "ESP-IDF: Flash & Monitor",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "-p",
                "COM3",
                "flash",
                "monitor"
            ],
            "dependsOn": "ESP-IDF: Build"
        },
        {
            "label": "ESP-IDF: Set Target ESP32",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "set-target",
                "esp32"
            ]
        },
        {
            "label": "ESP-IDF: Menuconfig",
            "type": "shell",
            "command": "idf.py",
            "args": [
                "menuconfig"
            ]
        }
    ]
}